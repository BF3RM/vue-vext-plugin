{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "module": "commonjs",     /* Specify library files to be included in the compilation. */
    "declaration": true,
    "outDir": "./dist",
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}
